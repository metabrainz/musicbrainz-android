<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_bg</item>
        <item name="colorPrimaryDark">@color/app_bg</item>
        <item name="colorAccent">@color/light_blue</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryDark">@color/app_bg</item>
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <style name="AppThemeGrayScale" parent="Base.Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_bg</item>
        <item name="colorPrimaryDark">@color/app_bg</item>
        <item name="colorAccent">@color/light_blue</item>
    </style>

    <style name="AppThemeForSettings" parent="Base.Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_bg</item>
        <item name="colorAccent">@color/app_bg_light2</item>
        <item name="colorPrimaryDark">@color/app_bg</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="alertDialogTheme">@style/settingsDialog</item>
    </style>

    <style name="AppThemeCustomActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="settingsDialog" parent="Base.Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="loginrequiredDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/alertdialog_popin</item>
    </style>

    <style name="loginrequiredDialog" parent="@style/settingsDialog">
        <item name="android:windowAnimationStyle">@style/loginrequiredDialogAnimation</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="colorPrimaryDark">@color/app_bg</item>
        <item name="android:windowBackground">@color/app_bg</item>
    </style>

    <style name="SettingsSwitchTheme" parent="@style/Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:colorForeground">#f57f17</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
</resources>
