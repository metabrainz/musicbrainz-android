<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/white"
                        android:startColor="@color/app_bg_light2" android:type="linear" />


                    <corners android:radius="10dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item android:right="10dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/drop_down_round_button" />

            </item>

        </layer-list>

    </item>

</selector>