<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_bg</item>
        <item name="colorPrimaryDark">@color/app_bg</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>

        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="alertDialogTheme">@style/settingsDialog</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/app_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">800</item>

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/AppThemeNoActionBar</item>
    </style>

    <style name="settingsDialog" parent="Base.Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="loginrequiredDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/alertdialog_popin</item>
    </style>

    <style name="loginrequiredDialog" parent="@style/settingsDialog">
        <item name="android:windowAnimationStyle">@style/loginrequiredDialogAnimation</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="colorPrimaryDark">@color/app_bg</item>
        <item name="android:windowBackground">@color/app_bg</item>
    </style>

    <style name="SettingsSwitchTheme" parent="@style/Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:colorForeground">#f57f17</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
</resources>
